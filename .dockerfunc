jhipster() {
	docker rm jhipster
	docker run -it \
		--name jhipster \
		-e HOME \
		--rm \
		--user $(id -u):$(id -g) \
		-v $HOME:$HOME \
		-w $(pwd) \
		--entrypoint=jhipster \
		jhipster:latest \
		$@
}

yarn() {
	jhipster-container ${FUNCNAME} $@
}

jhipster-container()  {
	docker rm jhipster
	docker run -it \
		--name jhipster \
		-e HOME \
		--rm \
		--user $(id -u):$(id -g) \
		-v $(pwd):$(pwd) \
		-v $HOME:$HOME \
		jhipster:latest \
		$@
}

connect() {
	docker run -it \
		-e HOME \
		--rm \
		--user $(id -u):$(id -g) \
		-p 8761:8761 \
		-p 8080:8080 \
		-v $HOME:$HOME \
		-w $HOME \
		jhipster
}